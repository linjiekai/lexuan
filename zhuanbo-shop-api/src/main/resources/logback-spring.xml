<?xml version="1.0" encoding="UTF-8"?>
<configuration  scan="true" scanPeriod="60 seconds" debug="false">

    <springProfile name="dev">
        <!--正式服的日志和jar文件同级，文件夹名logs-->
        <property name="log.path" value="C:/logs/lexuan/shop" />
    </springProfile>

    <!--输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} : [%L] - [%X{LOGGER_ID}] ====== %msg%n</pattern>
        </encoder>
    </appender>

    <!--输出到文件-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/lexuan-sys.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/logzip/sys/lexuan.%d{yyyy-MM-dd}-%i.log.zip</fileNamePattern>
            <!--每10MB生成一个zip-->
            <maxFileSize>10MB</maxFileSize>
            <!--最多保留100个zip-->
            <maxHistory>100</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} : [%L] - [%X{LOGGER_ID}] ====== %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="errorFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/lexuan-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/logzip/error/lexuan.%d{yyyy-MM-dd}-%i.log.zip</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} : [%L] - [%X{LOGGER_ID}] ====== %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="warnFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/lexuan-warn.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/logzip/warn/lexuan.%d{yyyy-MM-dd}-%i.log.zip</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} : [%L] - [%X{LOGGER_ID}] ====== %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="infoFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/lexuan-info.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/logzip/info/lexuan.%d{yyyy-MM-dd}-%i.log.zip</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} : [%L] - [%X{LOGGER_ID}] ====== %msg%n</pattern>
        </encoder>
    </appender>

    <!--分润日志-->
    <appender name="shareProfit" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/lexuan-shareProfit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/logzip/lexuan-shareProfit.%d{yyyy-MM-dd}-%i.log.zip</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} : [%L] - [%X{LOGGER_ID}] ====== %msg%n</pattern>
        </encoder>
    </appender>


    <!--请求返回的参数（冷数据）-->
    <appender name="coldFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/lexuan-cold.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/logzip/lexuan-cold.%d{yyyy-MM-dd}-%i.log.zip</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} : [%L] - [%X{LOGGER_ID}] ====== %msg%n</pattern>
        </encoder>
    </appender>
    
    <!--定时器-->
    <appender name="scheduled" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}/lexuan-scheduled.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/logzip/lexuan-scheduled.%d{yyyy-MM-dd}-%i.log.zip</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>100</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level  : [%C:%M:%L] - [%X{LOGGER_ID}] ====== %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO" addtivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </logger>
    <logger name="org.mybatis" level="INFO" addtivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </logger>

    <logger name="com.zhuanbo" level="ERROR" addtivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="errorFile"/>
    </logger>

    <logger name="com.zhuanbo" level="WARN" addtivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="warnFile"/>
    </logger>

    <logger name="com.zhuanbo" level="INFO" addtivity="false">
        <appender-ref ref="console"/>
        <appender-ref ref="infoFile"/>
    </logger>

    <logger name="shareProfit" addtivity="false">
        <appender-ref ref="shareProfit"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="coldFile" addtivity="false">
        <appender-ref ref="coldFile"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="scheduled" addtivity="false">
        <appender-ref ref="scheduled"/>
        <appender-ref ref="console"/>
    </logger>

</configuration>